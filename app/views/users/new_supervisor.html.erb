
<section class="index_user">
<%= turbo_frame_tag :modal do %>
  <div class="modals" data-controller="turbomodals">
    <div class="form_container">
      <div class="title">
        <h1 class="add_edit_title">Formulario para crear un usuario supervisor</h1>
      </div>
      <%= form_with model: @user, url: create_supervisor_path, method: :post , class: 'form_margin_top' do |form| %>
        <%= form.label :nombre %>
        <%= form.text_field :first_name, class: 'textBox', placeholder: 'Ingrese el nombre' %>
        <div class='error_message'><%= @user.errors[:first_name].to_sentence %></div>

        <%= form.label :apellido %>
        <%= form.text_field :last_name, class: 'textBox', placeholder: 'Ingrese el Apellido' %>
        <div class='error_message'><%= @user.errors[:last_name].to_sentence %></div>

        <%= form.label :email %>
        <%= form.email_field :email, class: 'textBox', placeholder: 'Ingrese el email' %>
        <div class='error_message'><%= @user.errors[:email].to_sentence %></div>

        <%= form.label :dni %>
        <%= form.number_field :dni, class: 'textBox', placeholder: 'Ingrese el dni' %>
        <div class='error_message'><%= @user.errors[:dni].to_sentence %></div>

        <%= form.label 'Fecha de nacimiento' %>
        <%= form.date_field :birthday, class: 'form-control' %>
        <div class='error_message'><%= @user.errors[:birthday].to_sentence %></div>

        <%= form.label 'Contrase単a' %>
        <%= form.password_field :password, class: 'textBox', placeholder: 'Ingrese la contrase単a' %>
        <div class='error_message'><%= @user.errors[:password].to_sentence %></div>

        <%= form.label 'Confirme contrase単a' %>
        <%= form.password_field :password_confirmation, class: 'textBox', placeholder: 'Confirme la contrase単a' %>
        <div class='error_message'><%= @user.errors[:password_confirmation].to_sentence %></div>

        <%= form.hidden_field :role, value: :supervisor %>
        <div class="form-submit-close-btns">
          <%= form.submit 'Crear cuenta', class:'btn new_user' %>
          <button data-action="click->turbomodals#submitEnd" class="btn new_user">Cerrar</button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
</section>