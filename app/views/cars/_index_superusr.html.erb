<div class="container">
  <span class="add-car-span">
    <h2>Listado de Automoviles</h2>
    <%= link_to "Agregar auto", new_car_path, class: 'btn' %>
  </span>
  <table class="table">
    <tr>
      <thead>
        <th>Foto: </th>
        <th>Numero de auto: </th>
        <th>Color: </th>
        <th>Patente: </th>
        <th>Marca: </th>
        <th>Modelo: </th>
        <th>Seguro: </th>
        <th>Kilometros: </th>
        <th>Siendo usado? </th>
      </thead>
    </tr>
  <% @cars.each do |car| %>
    <tbody class="table">
      <tr>
        <td><%= image_tag car.photo.url(:thumb).to_s %></td>
        <td><%= car.car_number %></td>
        <td><%= car.color %></td>
        <td><%= car.plate %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.insurance %></td>
        <td><%= car.kilometers %></td>
        <td><%= car.taken? ? 'Si' : 'No' %></td>
        <% if car.available? %>
          <td><%= link_to "Modificar", edit_car_path(car), data: {turbo_frame: 'modal'},  class: 'btn' %></td>
          <td><%= button_to "Eliminar auto", remove_car_car_path(car), method: :post, form: { data: { turbo_confirm: 'Confirmar eliminacion' } }, class: 'btn'%></td>
        <% end %>
      </tr>
    </tbody>
  <% end %>
  </table>
</div>