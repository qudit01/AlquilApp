<div class="container">
  <span class="add-car-span">
    <h2>Listado de Automoviles</h2>
    <%= link_to "Agregar auto", new_car_path, class: 'btn' %>
  </span>
  <table class="table">
    <tr>
      <thead>
        <th>Imagen: </th>
        <th>Numero de auto: </th>
        <th>Color: </th>
        <th>Patente: </th>
        <th>Marca: </th>
        <th>Modelo: </th>
        <th>Seguro: </th>
        <th>Kilometros: </th>
      </thead>
    </tr>
  </table>
  <% @cars.each do |c| %>
    <table class="table">
      <tr>
        <td><%= image_tag c.photo.url(:thumb).to_s %></td>
        <td><%= c.car_number %></td>
        <td><%= c.color %></td>
        <td><%= c.plate %></td>
        <td><%= c.brand %></td>
        <td><%= c.model %></td>
        <td><%= c.insurance %></td>
        <td><%= c.kilometers %></td>
      </tr>
      <td><%= link_to "Modificar", edit_car_path(c),  class: 'btn' %></td>
      <td><%= link_to "Ver mas detalles", car_path(c),  class: 'btn' %></td>
      <td><%= button_to "Eliminar auto", remove_car_car_path(c), method: :post, form: { data: { turbo_confirm: 'Confirmar eliminacion' } }, class: 'btn'%></td>
    </table>
  <% end %>
</div>